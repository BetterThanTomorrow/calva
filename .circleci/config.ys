--- !yamlscript/v0/

version: 2

jobs::
  reduce:
    fn [map job]:
      assoc map job:
        load: "jobs/$job.yaml"
    =>: .{}
    load: 'jobs.yaml'

workflows::
  reduce:
    fn [map workflow]:
      assoc map workflow:
        load: "workflows/$workflow.yaml"
    =>::
      version: 2
    load: 'workflows.yaml'
