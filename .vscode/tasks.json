{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch TS",
      "type": "npm",
      "script": "watch-ts",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Watch Webpack",
      "type": "npm",
      "script": "watch-webpack",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "IS_DEV_BUILD": "YES"
        }
      },
      "problemMatcher": []
    }
  ]
}
